{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			"@public/*": ["public/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@lottie/*": ["lottie-files/*"]
		},
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "postcss.config.js"],
	"exclude": ["node_modules"]
}
